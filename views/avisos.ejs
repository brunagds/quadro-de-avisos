<%- include('./partials/head') %> 
  
  <body>

    <!--Menu-->
    <%- include('./partials/navbar')  %> 

    <div class="container">
      <br><br>

      <a href="http://"><i class="fas fa-long-arrow-alt-left"></i>Voltar</a>
      <br><br>

      <div class="card shadow">
        <div class="card-header bg-purple text-white pl-5 p-4">
          <h2 class="float-left"> <i class="fas fa-book-open"></i> Meus Avisos</h2>
          <a href="/avisos/novo" class="btn btn-lg btn-outline-light float-right"><i class="far fa-calendar-plus"></i>  Novo Aviso</a>
        </div>
        <div class="card-body p-5">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Título</th>
                <th scope="col">Data</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>

              <% if (avisos.length < 1) { %>
               <tr>
                 <td colspan="4" class="text-center">Nenhum aviso cadastrado</td>
               </tr>
              <% } %>
              
              <% avisos.forEach(aviso => { %>
                <tr>
                  <th scope="row"> <%= aviso.ID_avisos %>  </th>
                  <td><%= aviso.titulo %></td>
                  <td><%= moment(avisos.data).format("DD-MM-YYYY") %></td>
                  <td>
                    <button class="btn btn-secondary">Excluir</button>
                    <button class="btn btn-primary">Alterar</button>
                  </td>
                </tr>
              <% }) %>

            </tbody>
          </table>
        </div> <!--class card-body-->
      </div> <!--class card--> 
    </div> <!--class conteiner-->
<%- include('./partials/scripts_import') %> 
  </body>
</html>